<%= bootstrap_form_for(@pin) do |f| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% @pin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.text_field :title, lable:'Title' %>
  <%= f.text_area :discription, lable: 'Pin Discription', rows:'5'  %>
  <%= f.submit class: 'btn btn-success' %>
  <% if @pin.user == current_user %>
  <%= link_to 'Back', my_pins_path,  class: 'btn btn-link' %>
  <% else %>
  <%= link_to 'Back', pins_path,  class: 'btn btn-link' %>
  <% end %>
<% end %>
