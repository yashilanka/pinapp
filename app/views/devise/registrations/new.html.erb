<div class="row">
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="col-xs-offset-4 col-xs-4">
        <div class="panel panel-default">
          <div class="panel-body">
          <h2 class="text-primary">Sign up</h2>
            <div class="clearfix"></div>
            <%= f.text_field :first_name, autofocus: true, hide_label: true, placeholder: 'First Name' %>
            <%= f.text_field :last_name, hide_label: true, placeholder: 'Last Name' %>
            <%= f.email_field :email, hide_label: true, placeholder: 'Email' %>
            <%= f.password_field :password, autocomplete: "off", hide_label: true, placeholder: 'Password' %>
              <% if @validatable %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true, placeholder: 'Re-type Password' %>
            <%= f.submit "Sign up", class: 'btn btn-success' %>
            <div class="clearfix"></div>
            <hr>
            <div class="clearfix"></div>
            <div class="well">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>